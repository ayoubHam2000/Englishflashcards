<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/collectionBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/box_width_radius"
    android:backgroundTint="@color/setBackgroundColorItem"
    android:layout_height="125dp">

    <TextView
        android:id="@+id/collectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Collection"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/collectionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:textSize="12sp"
        android:text="50/4800 : Cards memorizes \nLevel : 25 (10.00%)" />

    <Button
        android:id="@+id/practiceButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/my_paractice_btn"
        android:paddingVertical="1dp"
        android:paddingHorizontal="30dp"
        android:text="@string/practice"
        android:textSize="15sp"
        android:textColor="@color/addCollectionColor" />

    <ImageView
        android:id="@+id/collectionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_more_vert_24"
        android:backgroundTint="@color/black"
        android:layout_alignParentEnd="true"
        />

    <CheckBox
        android:id="@+id/checkCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />


    <ImageView
        android:id="@+id/collectionTagColor"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@drawable/my_box_radius_item_tag"
        />
    <ImageView
        android:id="@+id/itemClick"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent2"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>