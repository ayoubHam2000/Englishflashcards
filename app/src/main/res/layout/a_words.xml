<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fatherBack"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/box_width_radius"
    android:backgroundTint="@color/setBackgroundColorItem"
    >

    <TextView
        android:id="@+id/wordName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Five dfsdf sdfsdf"
        android:textSize="17sp"
        android:autoSizeMaxTextSize="18sp"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/wordDefinitions"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wordLevel"
        android:text="Get a MenuItem pointing to such item ..."
        android:textSize="10dp"
        />

    <TextView
        android:id="@+id/wordLevel"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wordNumber"
        android:text="Frequency"
        android:textSize="10dp"
        />

    <ImageView
        android:id="@+id/wordMenu"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_more_vert_24"
        android:backgroundTint="@color/black"
        />

    <ImageView
        android:id="@+id/favorite"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_favorite"
        />

    <TextView
        android:id="@+id/wordNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/itemClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent2"
        android:layout_marginBottom="40dp"
        />

    <CheckBox
        android:id="@+id/isChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />

</RelativeLayout>