<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/itemClick"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_box_outline_blank_24"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginVertical="7dp"
    android:layout_marginHorizontal="10dp"
    >

    <ImageView
        android:id="@+id/colorTag"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/my_circle"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:id="@+id/collectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:layout_toEndOf="@id/colorTag"
        android:layout_marginStart="20dp"
        />
    <TextView
        android:id="@+id/fatherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(All set)"
        android:layout_marginStart="20dp"
        android:textColor="@color/gray2"
        android:textSize="17sp"
        android:paddingVertical="10dp"
        android:layout_toEndOf="@id/collectionName"
        />

</RelativeLayout>